<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".category.DetailRecipe">


    <RelativeLayout
        android:id="@+id/judul_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/appbar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dett"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Detail Recipe"
            android:textColor="@color/white"
            android:fontFamily="@font/rubik_medium"
            android:textAlignment="center"
            android:textSize="30sp"></TextView>

        <ImageButton
            android:id="@+id/btnDash"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_alignRight="@id/dett"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="305dp"
            android:layout_marginRight="305dp"
            android:background="@drawable/logo_recipe"></ImageButton>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_detailrecipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>