<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_drink"
    tools:context=".category.DrinkActivity">
    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="75dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/logo_recipe"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">
    </ImageButton>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cs11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/cs1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cs12">
            <androidx.cardview.widget.CardView
                android:id="@+id/drink1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="@id/cs11"
                app:layout_constraintStart_toStartOf="@id/cs11"
                app:layout_constraintEnd_toStartOf="@id/drink2"
                app:cardCornerRadius="8dp"
                android:padding="2dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imgdrink1"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:background="@drawable/drink_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kopyor Durian"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/drink2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/cs11"
                app:layout_constraintStart_toEndOf="@id/drink1"
                app:layout_constraintEnd_toEndOf="@id/cs11"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgdrink2"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:background="@drawable/drink_2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cocopandan "
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cs12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cs11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/drink3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="@id/cs12"
                app:layout_constraintStart_toStartOf="@id/cs12"
                app:layout_constraintEnd_toStartOf="@id/drink4"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgdrink3"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:background="@drawable/drink_3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merah Delima"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/drink4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/cs12"
                app:layout_constraintStart_toEndOf="@id/drink3"
                app:layout_constraintEnd_toEndOf="@id/cs12"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/imgdrink4"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:background="@drawable/drink_4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bubur Candil"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>